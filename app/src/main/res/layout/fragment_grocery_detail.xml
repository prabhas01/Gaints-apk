<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.grocery_detail.GroceryDetailFragment">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:background="@drawable/bg_bottom_round_corner"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        android:padding="24dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_export"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        android:padding="24dp"
        />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/groceryImageSlider"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        android:layout_marginTop="20dp"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="20dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="1.5dp"
        app:sliderIndicatorSelectedColor="@color/green"
        app:sliderIndicatorUnselectedColor="@color/dark_gray"
        app:sliderScrollTimeInSec="3"

        />

    <TextView
        android:id="@+id/tvGroceryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewBackground"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Pulses"
        android:textSize="28sp"
        android:textColor="@color/textColorBlackBold"
        android:fontFamily="@font/roboto_bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGroceryName"
        app:layout_constraintStart_toStartOf="@id/tvGroceryName"
        android:text="1kg, Price"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/viewBackground"
        android:src="@drawable/ic_fav_unselected"
        android:background="@android:color/transparent"
        />





    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="67dp"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        android:text="@string/add_to_basket"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:backgroundTint="@color/green"
        android:fontFamily="@font/roboto_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>