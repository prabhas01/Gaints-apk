<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="248dp"
    android:layout_height="106dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/creamy_blue"
    android:layout_marginStart="20dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="18dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/ivGroceryImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/img_pulses"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            />
          <TextView
              android:id="@+id/tvGroceryName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/ivGroceryImage"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginStart="15dp"
              android:text="Pulses"
              android:textSize="20sp"
              android:fontFamily="@font/roboto_bold"
              android:textColor="@color/textColorBlackLight"

              />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>